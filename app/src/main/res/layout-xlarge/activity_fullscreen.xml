<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="alanbiaaturath.apps.turathbooksantuni.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="185dp"
            android:layout_height="90dp"

            android:layout_marginTop="-50dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="0.11"
            android:background="@drawable/eeee" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="العتبة العباسة المقدسة"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="الشؤون الفكرية والثقافية"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:layout_weight="0.10"
            android:background="@drawable/mmm" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="معهد تراث الانبياء"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:gravity="center"
            android:text="للدراسات الحوزوية الالكترونية"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />


    </LinearLayout>


</FrameLayout>
